<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.goott.eco.mapper.GameMapper">
	
	<!-- Cust의 Tree레벨에 따른 GameImage불러오기 -->
	<select id="getCustTreeLvl" resultType="com.goott.eco.domain.GameImageVO">
		SELECT mil_level, img_src 
		FROM eco.game_image
		WHERE mil_level=#{mil_level}
	</select>
	
	<!-- 이거는 집에서 버튼까지 만들어보기! 버튼만들어서, 클릭  -->
	<select id="getGameItem" resultType="com.goott.eco.domain.GameImageVO">
		SELECT * FROM eco.game_item
		WHERE item_name=#{item_name};
	</select>
	
	
	
</mapper>