<!-- selectItemImage -->
	<select id="selectImage"  resultType="com.goott.eco.domain.GameImageVO">
		SELECT img_src, strd_memo 
		FROM game_image
		WHERE mil_level=#{mil_level}
	</select>
	
	
	
	
	
</mapper>